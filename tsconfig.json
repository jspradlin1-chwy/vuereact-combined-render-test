{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es5", "es6", "es2015", "es2016","es2017","es2018", "es2019", "dom"],
    "baseUrl": ".",
    "typeRoots": ["./src/types"],
    "types": ["vue", "node"],
    "jsx": "react"
  },
  "files": [
    "src/main.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
